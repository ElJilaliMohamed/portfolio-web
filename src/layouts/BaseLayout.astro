---
const { title } = Astro.props;
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';
import Image from 'astro/components/Image.astro';
import mozamPolaroid from '../img/mozam-polaroid.webp';
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="stylesheet" href="https://use.typekit.net/coi1biv.css" />

    <title>{title}</title>
  </head>
  <body>
    <Navigation />
    <div class="hero">
      <div class="head">
        <p class="head__title">Mozam scribbles creativity!</p>
      </div>
      <div>
        <Image src={mozamPolaroid} alt="placeholder" class="hero__img" />
      </div>
    </div>

    <div class="container">
      <p class="subjectText">Highlighted Projects:</p>

      <div class="">
        <div></div>
        <div></div>
        <div></div>
      </div>
    </div>
    <Footer />
  </body>
</html>
<style>

  .hero__img {
    height: auto;
    max-width: 100%;
  }
</style>
